<nav class="navbar second">
  <div class="nav-itens">
    <a href="/logout">Sair</a>
  </div>
</nav>
<div class="auth-container" id="margin">
    <h4 class="mb-4">Próximos procedimentos:</h4>
     {{#each tblagenda}}  
  <form class="card-form" action="/removeagenda/{{this.cpf}}" method="POST">     
    <div class="row">
       <div class="col-4 mb-2">
        <label class="form-label" for="cpf">cpf: </label>
        <h5>{{this.cpf}}</h5>
        </div>
       <div class="col-4 mb-2">
        <label for="procedimento" class="form-label"> Procedimento: </label>
        <h5>{{this.procedimento}}</h5>
      </div>
      <div class="col-4 mb-2">
        <label for="profissional" class="form-label"> Profissional: </label>
        <h5>{{this.profissional}}</h5>
      </div>
      <div class="col-6 mb-2">
        <label for="data" class="form-label"> Data: </label>
        <h5>{{#formatDate data}}{{/formatDate}}</h5>
      </div>
       <div class="col-6 mb-4">
        <label for="horario" class="form-label"> Horário: </label>
        <h5>{{horario}}</h5>
      </div>
      <div class="col text-center">
      <a href="/reagendar/{{this.cpf}}" class="btn"><i class="bi bi-pencil-square"></i> Reagendar</a>
      <a href="/editcliente/{{this.cpf}}" class="btn"><i class="bi bi-pencil-square"></i> Cadastro Cliente</a>
      <button type="submit" class="btn"><i class="bi bi-trash3"></i> Cancelar</button>
      </div>
</form> 
</div>
<br>
{{/each}} 

 

